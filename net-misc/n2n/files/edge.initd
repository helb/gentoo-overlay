depend() {
	use net
}

start() {
	ebegin "Starting edge"
	start-stop-daemon \
		--start \
		--quiet \
		--exec /usr/sbin/edge \
		--env N2N_KEY="${KEY}" \
		-- -a "${ADDRESS}" \
			-c "${COMMUNITY}" \
			-l "${SUPERNODE}" \
			-u ${USER} -g ${GROUP} ${OPTIONS}
	eend $?
}

stop() {
	ebegin "Stopping edge"
	start-stop-daemon \
		--stop \
		--exec /usr/sbin/edge
	eend $?
}
